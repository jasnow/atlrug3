  .container
    .row
      .span6
        = yield
      .span3
        .well.sidebar-nav
          h3 How do I...
          ul.nav.nav-list
            li
              = link_to "<i class='icon-calendar'></i> Go to a meeting?".html_safe,
                        page_path("meeting")
            li= link_to "<i class='icon-comment'></i> Give a talk?".html_safe,
                        new_talk_path
            li= link_to "<i class='icon-film'></i> Watch old presentations?".html_safe,
                        page_path("old_presentations")
